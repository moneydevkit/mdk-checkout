{
  "name": "@moneydevkit/payouts",
  "version": "0.1.0",
  "description": "Secure programmatic Lightning payouts for MoneyDevKit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moneydevkit/mdk-checkout.git",
    "directory": "packages/payouts"
  },
  "homepage": "https://github.com/moneydevkit/mdk-checkout/tree/main/packages/payouts",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
