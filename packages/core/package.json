{
  "name": "@moneydevkit/core",
  "version": "0.7.0-beta.4",
  "description": "Shared moneydevkit checkout core utilities",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moneydevkit/mdk-checkout.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/moneydevkit/mdk-checkout/tree/main/packages/core",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "default": "./dist/client.js"
    },
    "./mdk-styles.css": "./dist/mdk-styles.css",
    "./route": {
      "types": "./dist/route.d.ts",
      "import": "./dist/route.js",
      "default": "./dist/route.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && npm run copy-css",
    "copy-css": "node scripts/copy-styles.mjs",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && tsx --tsconfig tsconfig.test.json --test $(find tests -name '*.test.ts')"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@moneydevkit/api-contract": "0.1.13",
    "@moneydevkit/lightning-js": "^0.1.59",
    "@orpc/client": "1.3.0",
    "@orpc/contract": "1.3.0",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.79.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "qrcode.react": "^4.2.0",
    "react-hook-form": "^7.56.4",
    "tailwind-merge": "^3.3.0",
    "vaul": "^1.1.2",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  }
}
